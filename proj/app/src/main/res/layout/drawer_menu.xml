<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="280dp" android:layout_height="match_parent" android:background="@drawable/gradient_background" android:orientation="vertical" android:paddingStart="16dp" android:paddingTop="32dp" android:paddingEnd="16dp">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_bg"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ex User"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#E6FFE6"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Пункты меню -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Position -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_position"
                android:tint="#A9CDB1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textColor="#A9CDB1"
                android:textSize="16sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Weather -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333" android:layout_marginVertical="4dp"/>
        <LinearLayout
            android:id="@+id/weather_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_weather"
                android:tint="#A9CDB1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather"
                android:textColor="#A9CDB1"
                android:textSize="16sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Time -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333" android:layout_marginVertical="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_time"
                android:tint="#A9CDB1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="#A9CDB1"
                android:textSize="16sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Money -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333" android:layout_marginVertical="4dp"/>
        <LinearLayout
            android:id="@+id/money_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_money"
                android:tint="#A9CDB1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money"
                android:textColor="#A9CDB1"
                android:textSize="16sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>