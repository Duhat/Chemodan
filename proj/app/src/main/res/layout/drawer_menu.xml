<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="32dp"
    android:paddingEnd="16dp">

    <!-- Блок профиля -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp"
        android:paddingTop="16dp">

        <!-- Аватарка -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_bg"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            />

        <!-- Имя пользователя -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#E6FFE6"
            android:layout_marginTop="12dp"/>

        <!-- Email -->
        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textSize="14sp"
            android:textColor="#A9CDB1"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333"
        android:layout_marginBottom="16dp"/>

    <!-- Пункты меню -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Position
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_position"
                android:tint="#A9CDB1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textColor="#A9CDB1"
                android:textSize="16sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>-->

        <!-- Weather -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333" android:layout_marginVertical="4dp"/>
        <LinearLayout
            android:id="@+id/weather_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_weather"
                android:tint="#A9CDB1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather"
                android:textColor="#A9CDB1"
                android:textSize="16sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Time -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333" android:layout_marginVertical="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_docs"
                android:tint="#A9CDB1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Documents"
                android:textColor="#A9CDB1"
                android:textSize="16sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Money -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333" android:layout_marginVertical="4dp"/>
        <LinearLayout
            android:id="@+id/money_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_money"
                android:tint="#A9CDB1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money"
                android:textColor="#A9CDB1"
                android:textSize="16sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Кнопка выхода -->
    <LinearLayout
        android:id="@+id/sign_out_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginBottom="16dp">



        <TextView
            android:id="@+id/sign_out_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textColor="#FF6B6B"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
</LinearLayout>